#!/usr/bin/env sh
#
# DESCRIPTION:
#   Load MPD info every time it updates.
# 
# DEPENDENCIES:
#   sensors
#
# MAINTAINER: (s)
#   GPL3 ðŸ„¯ BeyondMagic <koetemagie/gmail.com> 2021-

_icon_sensors() {

  icon="$1"; bg_icon="$2"; fg_icon="$3"

  affix_reverse="$(xgetres bars.separator3)"

  echo "%{T3}%{B$bg_icon}%{F$sensors_fg_affix}$affix%{F$fg_icon}$icon%{F$bg_icon}%{B$sensors_bg_affix}$affix_reverse%{T2}"

}

_sensors() {

  affix="$(xgetres bars.separator3)"

  while :; do

    sss="$(sensors | sed -r -e 's/edge: +\+|.0Â°C//g' -e '5q;d')"

    mmm=""

    #  0 < sss < 50
                           [ "$sss" -lt "52" ] && mmm="$(_icon_sensors "ïƒ‚ " "$low_low_bg" "$low_low_fg" ) $sss"

    # 50 < sss < 67
    [ "$sss" -gt "51" ] && [ "$sss" -lt "68" ] && mmm="$(_icon_sensors "îˆ„ " "$nor_low_bg" "$nor_low_fg" ) $sss"

    # 67 < sss < 77
    [ "$sss" -gt "67" ] && [ "$sss" -lt "77" ] && mmm="$(_icon_sensors "ïƒ§ " "$med_med_bg" "$med_med_fg" ) $sss"

    # 77 < sss < 95
    [ "$sss" -gt "76" ] && [ "$sss" -lt "95" ] && mmm="$(_icon_sensors "îŽ¿ " "$hig_med_bg" "$hig_med_fg" ) $sss"

    echo 'S' "%{T1}%{O-4}$mmm ÂºC  %{F$sensors_bg_affix}%{B-}$affix%{T2}%{F-}"

    sleep 5

  done
}

[ "$1" = "run" ] && {

  . "$SCRIPTS_FOLDER"/bars/config
  _sensors

}
